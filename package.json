{
  "name": "playwright-agent-tests",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "pw:install": "PLAYWRIGHT_BROWSERS_PATH=.playwright-browsers playwright install",
    "test": "PLAYWRIGHT_BROWSERS_PATH=.playwright-browsers playwright test",
    "bddgen": "playwright-bdd",
    "test:ui": "PLAYWRIGHT_BROWSERS_PATH=.playwright-browsers playwright test --ui --project=chromium",
    "last-failure": "npx ts-node --esm scripts/last-failure.ts",
    "notify-slack": "npx ts-node --esm scripts/notify-slack.ts",
    "test:ci": "PLAYWRIGHT_BROWSERS_PATH=.playwright-browsers playwright test; e=$?; TEST_EXIT_CODE=$e npm run notify-slack; exit $e",
    "overnight": "node scripts/overnight-generate-remaining.mjs",
    "clean:dumps": "node scripts/clean-old-dumps.mjs"
  },
  "devDependencies": {
    "@playwright/test": "1.58.1",
    "@zerostep/playwright": "latest",
    "dotenv": "latest",
    "playwright-bdd": "^8.4.2",
    "ts-node": "^10.9.2",
    "typescript": "latest"
  }
}